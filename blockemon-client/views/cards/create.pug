extends ../layout

block content
  .page-header
    h3 Create Card

  form.form-horizontal(action='/cards/create', method='POST')
    input(type='hidden', name='_csrf', value=_csrf)
    .form-group
      label.col-sm-3.control-label(for='cardname') Name
      .col-sm-7
        input.form-control(type='text', name='cardname', id='cardname', placeholder='name of the card')
    .form-group
      label.col-sm-3.control-label(for='cardimage') Image
      .col-sm-7
        input.form-control(type='text', name='cardimage', id='cardimage', placeholder='url of card image', value=link)
    .form-group
      label.col-sm-3.control-label(for='carddescription') Description
      .col-sm-7
        input.form-control(type='text', name='carddescription', id='carddescription', placeholder='description of the card')
    .form-group
      label.col-sm-3.control-label(for='carddescription') Type
      .col-sm-7
        div.radio
          label
            input(type='radio', name='cardtype', id='cardtype', value='monster', checked='checked') 
            | Monster
        div.radio
          label
            input(type='radio', name='cardtype', id='cardtype', value='spell') 
            | Spell
    .form-group
      .col-sm-offset-3.col-sm-4
        if canCreate
          button.btn.btn.btn-primary(type='submit', onclick='this.form.submit(); this.innerText="Mining"; this.disabled=true;')
            i.fa.fa-pencil
            | Create Card
          br
        else
          p You don't have enough ecoin to create cards. Mine some more!
        p Mining takes time, please be patient
